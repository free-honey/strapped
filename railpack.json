{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install_forc": {
      "commands": ["./railpack/install_forc.sh"]
    },
    "build": {
      "inputs": [{ "step": "install_forc" }],
      "commands": ["cargo xtask abi"]
    }
  },
  "deploy": {
    "startCommand": "cargo run -p indexer -- --graphql-url ${GRAPHQL_URL} --port ${PORT} --test --tracing"
  }
}
