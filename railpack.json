{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "sanity_check": {
      "commands": [
        "pwd && ls -la"
      ]
    },
    "install_forc": {
      "commands": [
        "export PATH=${HOME}/.fuelup/bin:${PATH}; if ! command -v fuelup >/dev/null 2>&1; then curl -sSf https://install.fuel.network | sh; fi; fuelup toolchain install latest; fuelup default latest"
      ]
    },
    "build": {
      "inputs": [{"step": "sanity_check"}, { "step": "install_forc" }],
      "commands": [
        "cargo run -p xtask -- abi"
      ]
    }
  },
  "deploy": {
    "startCommand": "cargo run -p indexer -- --graphql-url ${GRAPHQL_URL} --port ${PORT} --test --tracing"
  }
}
